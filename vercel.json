{
  "buildCommand": "npm ci && npm run build",
  "installCommand": "npm ci",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NPM_CONFIG_LEGACY_PEER_DEPS": "true",
    "SKIP_ENV_VALIDATION": "true"
  },
  "build": {
    "env": {
      "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
    }
  }
} 